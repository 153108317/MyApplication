<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yh.myapplication.activities.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/root_LInearLayout"
        android:text="Hello World!" />

    <RadioGroup
        android:id="@+id/home_RadioGroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <RadioButton
            android:id="@+id/home_radiobutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:background="@drawable/select_state"
            android:text="首页" />

        <RadioButton
            android:id="@+id/list_radiobutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_state"
            android:text="列表" />

        <RadioButton
            android:id="@+id/my_radiobutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/select_state"
            android:layout_weight="1"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>
</RelativeLayout>
